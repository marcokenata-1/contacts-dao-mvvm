<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.insert.DataInsert">

    <TextView
        android:id="@+id/tv_add_contact"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="500dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Add Contact" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_contact"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Name"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Number"/>

    <EditText
        android:id="@+id/et_number"
        android:inputType="phone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_62"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_62"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        app:layout_constraintRight_toLeftOf="@id/et_number"
        android:layout_marginBottom="500dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="+62" />

    <TextView
        android:id="@+id/tv_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_number"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Relation"/>

    <EditText
        android:id="@+id/et_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_relation"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt_addition"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="ADD TO CONTACTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>